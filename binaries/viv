#!/bin/sh

print_usage() {
    echo "viv [--help] files/directories"
    echo "View files/directories in browser and lazily start vivify-server"
}

if [ "$#" -lt 1 -o "$1" = "-h" -o "$1" = "--help" ]; then
    print_usage
    exit 1
fi

output=`mktemp`
cleanup() {
    rm -f "$output"
}
trap cleanup EXIT

nohup vivify-server $@ > "$output" 2> /dev/null &

# print stdout of vivify-server until STARTUP COMPLETE is found
tail -f "$output" | while read line; do
    if echo "$line" | grep -q "STARTUP COMPLETE"; then
        pkill -P $$ tail
        break
    fi
    echo "$line"
done
